											a(href="+380686313415")
												| (068) 631-34-15
											a(href="+380635508840")
												| (063) 550 88 40
											a(href="+380505322868")
												| (050) 532-28-68
									li
										span.fa.fa-envelope
										p
											| E-MAIL: 
											a(href="mailto:info@fenixcentr.com.ua")
