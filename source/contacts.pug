									li
										span.fa.fa-clock-o
										p.
											График работы: Пн-Пт: 9:00-18:00  Сб: 9:00-14:00
					.col-sm-6
						.contacts_right
							h2 Свяжитесь с нами
							form
								.row
									.form-group.col-sm-6
										label(for='name') Ваше имя
										input.form-control#name(type='text', name='name', placeholder='Введите ваше имя', required)
									.form-group.col-sm-6
										label(for='email') E-mail
										input.form-control#email(type='text', name='email', placeholder='E-mail', required)
								.form-group
										label(for='tel') Телефон
										input.form-control#tel(type='text', name='tel', placeholder='Телефон', required)
								.form-group
									label(for='message') Сообщение
									textarea.form-control#message(type='text', name='name', placeholder='Введите ваше сообщение...', rows='5', required)
								button(type='submit').btn.turq-btn Отправить сообщение
			section.map
				.map_block#map
	include ./templates/footer
	include ./templates/buy-oneclick
	include ./templates/success