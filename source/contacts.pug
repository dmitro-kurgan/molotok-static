								ul
									li
										a(href="#").fa.fa-facebook
									li
										a(href="#").fa.fa-twitter
									li
										a(href="#").fa.fa-instagram
									li
										a(href="#").fa.fa-youtube-play
							.contacts_address
								ul
									li
										span.fa.fa-map-marker
										p.
											Харьков, пр. Московский, 247 , Ул. Победителей, 6 а (Холодная гора)
									li
										span.fa.fa-phone
										p
