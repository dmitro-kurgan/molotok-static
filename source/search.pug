extends ./templates/base

block title
	title Search
block main
	include ./templates/header
	section.breadcrumb
		.container_content
			ul.clearfix
				li
					a(href='./') Главная
				li
					a(href='search.html') Поиск товара
	.content.content--search
		.container_content
				section.search
					.search_top.clearfix
						form
							.form-group
								button.fa.fa-search(type='submit')
								input.form-control(type='text', name='search', placeholder='Поиск...')
						.search_result.clearfix
							.name 
								| Результаты поиска по запросу 
								span 
								| «стройматериалы»:
							.quantity 
								| Найдено 
								span 890 
								| товаров
					.search_main
						.row
							mixin goods(sticker, stickername, pic, name, text, price, saleclass, saleprice)
								.col-sm-4.col-md-3
									a(href="product-pg.html").search_box
										.search_box_main
											.search_box_top
												.sticker.sticker-new New
											.search_box_img(style='background-image: url(' + require('./components/images/' + pic) + ')')
										.search_box_bottom
											.search_box_name
												p= name
											.buy-it_box_price
													p(class='buy-it_box_cost')= price
													p(class='' + saleclass)= saleprice
											.buy-it_box_text.tip
												p= text
									.buy-it_panel.clearfix
										ul
											li
												span
													a(href="#")
													.description
														p В сравнение
											li
												span
													a(href="#")
													.description.one-click
														p Купить в один клик
											li
												a(href="#") купить
							+goods('','','1-br-aquamast.jpg','AQUAMAST МАСТИКА БИТУМНО-РЕЗИНОВАЯ (10КГ)', 'Холодная гидроизоляционная мастика на основе битума и дробленой резины. Для устройства кровельного покрытия.', '359 грн', '', '')
							+goods('sticker sticker-new','New','Evroruberojd-HKP-768x1024.png','ОРЕОЛ-1 ЕВРОРУБЕРОИД ХПП 2,0 (15М2)', 'Битумно-полимерный материал для гидроизоляции класса Эконом. Для нижнего слоя мягкой кровли и гидроизоляции зданий', '380 грн.', 'buy-it_box_sale', '410 грн')
							+goods('','','P25_L.jpg','ПОЛИМИН П-24 ЭЛАСТ-КЛЕЙ 25КГ', 'ПОЛИМИН П-24 эласт-клей  (для балконов и полов с электро и водным обогревом)', '259 грн', '', '')
							+goods('','','1-osb-qsbosb-12-mm-1250-2500-krono-ukraina.jpg','OSB (ХАРЬКОВ) 2500*1250*10ММ', 'Ориентированно-стружечная плита (ОСП) — это многослойный (3-4 слоя) лист из древесной стружки, склеенной различными смолами с добавлением синтетического воска и борной кислоты.', '300 грн', '', '')
							+goods('sticker sticker-new','New','ode.jpg','УТЕПЛИТЕЛЬ ODE ФОЛЬГИРОВАННЫЙ 50*1200*1000 12М2', 'Тепло- звукоизоляционный материал минерального происхождения Knauf Insulation 18м2', '475 грн', '', '')
							+goods('sticker sticker-new','New','Stark_deltashlif_FS_110.png','ДЕЛЬТАШЛИФМАШИНА ВИБРАЦИОННАЯ STARK FS 110', 'Дельташлифмашина для шлифования древесины, пластмассы, металла, композиционных материалов. Может применяться для полировки поверхности мебели, если использовать мягкую ткань вместо наждачной бумаги.', '537 грн', 'buy-it_box_sale', '581 грн')
							+goods('','','Elektrodrel-ID500new.png','ДРЕЛЬ БЕЗУДАРНАЯ STARK ID 500', 'Электродрель, предназначенная для сверления отверстий в древесине, металле и бетоне. Может использоваться как шуруповерт для завинчивания шурупов и нарезания резьбы.', '726 грн', 'buy-it_box_sale', '785.00 грн')
							+goods('sticker sticker-new','New','1-mira3100-150x150.jpg','КЛЕЙ ДЛЯ ПЛИТКИ ЭЛАСТИЧНЫЙ MIRA 3100 UNIFIХ (СЕРЫЙ) 25 КГ', 'Клей для плитки Mira 3100 standardfix для облицовки керамической плиткой стен и полов внутри и снаружи помещений. Высокая степень адгезии', '260 грн', '', '')
					.search_pagination
						.pagination-block
							.pagination.loop-pagination
								a.prev.page-numbers(href='#') Предыущая
								a.page-numbers(href='#') 1
								span.page-numbers.current 2
								a.page-numbers(href='#') 3
								span.page-numbers.dots …
								a.page-numbers(href='#') 10
								a.next.page-numbers(href='#') Следующая
	include ./templates/footer
	include ./templates/buy-oneclick
	include ./templates/success